{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2021",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "index.js"
  ]
}